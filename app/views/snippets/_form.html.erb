
<%= form_for @snippet do |f| %>
  <div class="form-group">
    <%= f.label :kind %>
    <%= f.select :kind, [['Ruby','ruby'],['HTML','html'],['CSS','css'],['JavasScript','javascript']] %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <%= f.label :work %>
  <%= f.text_area :work, :cols => 30, :rows => 10 %>
  </div>
  <div class="form-group">
  <%= f.submit "Save" %>
</div>
<% end %>
